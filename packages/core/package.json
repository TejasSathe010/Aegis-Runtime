  ],
  "author": "Aegis Runtime Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aegis-runtime/aegis-runtime.git",
    "directory": "packages/core"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:test": "tsc -p tsconfig.test.json",
    "test": "pnpm build && pnpm build:test && node --test dist-test/*.test.js",
