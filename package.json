{
  "name": "aegis-runtime",
  "version": "1.0.0",
  "description": "Production-ready governance and runtime controls for AI/LLM applications",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "keywords": [
    "ai",
    "llm",
    "governance",
    "policy",
    "budget",
    "audit",
    "runtime",
    "aegis"
  ],
  "author": "Aegis Runtime Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aegis-runtime/aegis-runtime.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev:proxy": "pnpm --filter @aegis/proxy dev",
    "lint": "echo \"(optional) add eslint later\"",
    "prepare": "pnpm build"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.6.3"
  }
}
